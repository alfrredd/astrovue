---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Apply Now">
    <main>
        <h1>Application Page</h1>
        <p>Application form will go here.</p>
        <a href="/" class="back-button">&larr; Back to Home</a>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1.5rem;
        max-width: 60ch;
        text-align: center;
    }
    .back-button {
        display: inline-block;
        margin-top: 2rem;
        color: rgb(var(--accent));
        text-decoration: none;
    }
    .back-button:hover {
        text-decoration: underline;
    }
      /* Basic theme variables assumed from default Astro setup */
  :root {
    --accent: 136, 58, 234;
  }
    h1 {
        color: rgb(var(--accent));
    }

</style>
